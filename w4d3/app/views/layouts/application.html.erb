<!DOCTYPE html>
<html>
<head>
  <title>NinetyNineCatsDay1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    <h1>Hello <%= current_user.user_name %>!</h1>
    <%= button_to "logout", new_user_url, method: :get %>
  <% else %>
    <h1>Please Login</h1>
    <%= button_to "login", new_user_url, method: :get %>
  <% end  %>

<%= yield %>

</body>
</html>
